<div class="main-content">
  <div class="room-list-div">
    <div class="room-name">CHAT ROOMS</div>
    <ul class="room-list">
      <% rooms.forEach( room => { %>
        <li>
          <a href="/chatrooms/<%=room%>"><h4 class="room"><%=room%></h4></a>
        </li><hr>
      <% }) %>
    </ul>
  </div>
  <div class="new-room">
    <div class="new-room-label">NEW ROOM</div>
    <div class="new-room-form">
      <form action="/new-room" method="post" id="new-room">
        <label for="new-room">Room Name</label>
        <input type="text" name="newRoom" class="form-control new-room-text">
        <input type="submit" name="submit-room" value="Create Room" class="btn btn-success submit-post">
      </form>
    </div>
  </div>
</div>

